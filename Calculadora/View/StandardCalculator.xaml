<Window x:Class="Calculadora.View.StandardCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora.View"
        mc:Ignorable="d"
        x:Name="Calculadora"
        Title="Calculadora" 
        Height="550"
        MinHeight="550"
        Width="400"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        
        >
    <Window.Resources>
        
    </Window.Resources>

    <Grid>
        <Border x:Name="MenuBorder"
                CornerRadius="0, 8 , 8, 0"
                Background="White"
                Width="250"
                MinWidth="250"
                HorizontalAlignment="Left"
                Panel.ZIndex="1"
                Visibility="Hidden"
                BorderBrush="Black"
                BorderThickness="1"
                >
            <Grid x:Name="MenuBorderGrid"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" 
                  ScrollViewer.CanContentScroll="True"
                  Margin="0, 10, 0, 0"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Source="/Assets/icons8-close-window-50.png"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       Width="40"
                       Height="40"
                       Margin="10, 0 , 0 ,0"/>
                <Button Style="{StaticResource CommonButtonStyle}"
                        x:Name="CloseMenuButton" 
                        Grid.Row="0" 
                        Height="40" Width="40"
                        Opacity="1"
                        BorderThickness="0"
                        Margin="10, 0 , 0 ,0"
                        HorizontalAlignment="Left" 
                        Background="Transparent"
                        Click="CloseMenuButton_Click"/>


                <ScrollViewer Grid.Row="1">
                    <Grid x:Name="MenuBorderContentGrid"
                      >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300"/>
                            <RowDefinition Height="500"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0"
                                   Content="Calculadora"
                                   FontSize="18"
                                   FontWeight="Light"
                                   Margin="10, 0 , 0 ,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   />

                            <RadioButton Grid.Row="1"
                                         Grid.Column="0"
                                         Style="{StaticResource MenuGridButtonStyle}">
                                <Grid>
                                    <Image Source="/Assets/icons8-calculator-50.png"
                                           HorizontalAlignment="Left"
                                           Width="30" 
                                           Height="30"
                                           Margin="5 0 0 0"
                                           ></Image>
                                    <TextBlock Text="Padrão"
                                               FontSize="18"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="50 0 0 0">
                                    </TextBlock>
                                </Grid>
                            </RadioButton>

                            <RadioButton Grid.Row="2"
                                         Grid.Column="0"
                                         Style="{StaticResource MenuGridButtonStyle}"
                                >
                                <Grid>
                                    <Image Source="/Assets/icons8-test-tube-48.png"
                                           HorizontalAlignment="Left"
                                           Width="30" 
                                           Height="30"
                                           Margin="5 0 0 0"
                                           ></Image>
                                    <TextBlock Text="Científica"
                                               FontSize="18"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="50 0 0 0"
                                               >

                                    </TextBlock>
                                </Grid>
                            </RadioButton>


                        </Grid>

                    </Grid>
                </ScrollViewer>

            </Grid>

        </Border>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Image Source="/Assets/icons8-menu-rounded-50.png"
                       Grid.Column="0"
                       Grid.Row="0"
                       Height="40"
                       Width="40"
                       />
                <Button Style="{StaticResource CommonButtonStyle}" 
                        x:Name="OpenMenuButton" 
                        Grid.Row="0"
                        Grid.Column="0"
                        Background="Transparent"
                        Opacity="1"
                        Height="50"
                        Width="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderThickness="0" 
                        Click="MenuBtn_Click"
                    />

                <Label Grid.Row="0"
                       Grid.Column="1"
                       FontSize="30"
                       HorizontalAlignment="Left"
                       Content="Padrão" 
                       FontWeight="Bold"
                       Margin="10, 0, 0, 0"
                       />
                <Image Source="/Assets/icons8-clock-settings-48.png"
                       HorizontalAlignment="Center"
                       Grid.Column="2"
                       Height="40"
                       Width="40"
                       />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="0.7*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0"
                         HorizontalAlignment="Right">
                    <TextBlock Text="Resultado"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="0, 0, 10, 0"/>
                </Viewbox>
                <Viewbox Grid.Row="1"
                     x:Name="CalculatorDisplayViewBox"
                     Stretch="Uniform"
                     HorizontalAlignment="Right">
                    <TextBox x:Name="CalculatorDisplay"
                       Text="0"
                       Margin="0, 0, 10, 0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center" 
                       FontStretch="Normal" 
                       FontWeight="DemiBold" 
                       FontSize="48"
                       BorderThickness="0"
                       IsManipulationEnabled="True"
                       IsHitTestVisible="True"
                       TextOptions.TextFormattingMode="Ideal"
                       TextOptions.TextRenderingMode="Auto"/>
                </Viewbox>

            </Grid>
                       

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Grid.Row="0" Content="MC" Style="{StaticResource CalculatorButtonStyle}"/>
                <Button Grid.Column="1" Grid.Row="0" Content="ME" Style="{StaticResource CalculatorButtonStyle}"/>
                <Button Grid.Column="2" Grid.Row="0" Content="M+" Style="{StaticResource CalculatorButtonStyle}"/>
                <Button Grid.Column="3" Grid.Row="0" Content="M-" Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Column="0" Grid.Row="1" Content="CE" Style="{StaticResource CalculatorButtonStyle}"/>
                <Button Grid.Column="1" Grid.Row="1" Content="C" Style="{StaticResource CalculatorButtonStyle}"/>
                <Button Grid.Column="2" Grid.Row="1" Content="Back" Style="{StaticResource CalculatorButtonStyle}"/>
                <Button Grid.Column="3" Grid.Row="1" Content="/" Style="{StaticResource CalculatorButtonStyle}"/>

                <Button x:Name="button_7" Grid.Column="0" Grid.Row="2" Content="7" Style="{StaticResource CalculatorButtonStyle}"  Click="Number_Click"/>
                <Button x:Name="button_8" Grid.Column="1" Grid.Row="2" Content="8" Style="{StaticResource CalculatorButtonStyle}"  Click="Number_Click"/>
                <Button x:Name="button_9" Grid.Column="2" Grid.Row="2" Content="9" Style="{StaticResource CalculatorButtonStyle}"  Click="Number_Click"/>
                <Button Grid.Column="3" Grid.Row="2" Content="*" Style="{StaticResource CalculatorButtonStyle}"/>

                <Button x:Name="button_4" Grid.Column="0" Grid.Row="3" Content="4" Style="{StaticResource CalculatorButtonStyle}"  Click="Number_Click"/>
                <Button x:Name="button_5" Grid.Column="1" Grid.Row="3" Content="5" Style="{StaticResource CalculatorButtonStyle}"  Click="Number_Click"/>
                <Button x:Name="button_6" Grid.Column="2" Grid.Row="3" Content="6" Style="{StaticResource CalculatorButtonStyle}"  Click="Number_Click"/>
                <Button x:Name="button_plus" Grid.Column="3" Grid.Row="3" Content="+" Style="{StaticResource CalculatorButtonStyle}" Click="Operator_Click"/>

                <Button x:Name="button_1" Grid.Column="0" Grid.Row="4" Content="1" Style="{StaticResource CalculatorButtonStyle}"  Click="Number_Click"/>
                <Button x:Name="button_2" Grid.Column="1" Grid.Row="4" Content="2" Style="{StaticResource CalculatorButtonStyle}" Click="Number_Click"/>
                <Button x:Name="button_3" Grid.Column="2" Grid.Row="4" Content="3" Style="{StaticResource CalculatorButtonStyle}" Click="Number_Click"/>
                <Button Grid.Column="3" Grid.Row="4" Content="-" Style="{StaticResource CalculatorButtonStyle}" Click="Operator_Click"/>

                <Button Grid.Column="0" Grid.Row="5" Content="+/-" Style="{StaticResource CalculatorButtonStyle}"/>
                <Button x:Name="button_0" Grid.Column="1" Grid.Row="5" Content="0" Style="{StaticResource CalculatorButtonStyle}" Click="Number_Click"/>
                <Button x:Name="button_float" Grid.Column="2" Grid.Row="5" Content="," Style="{StaticResource CalculatorButtonStyle}" Click="Number_Click"/>
                <Button x:Name="button_equals" Grid.Column="3" Grid.Row="5" Content="=" Style="{StaticResource CalculatorButtonStyle}" />

               
            </Grid>

        </Grid>

    </Grid>
</Window>
